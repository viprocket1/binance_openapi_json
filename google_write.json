{
  "openapi": "3.0.0",
  "info": {
    "title": "Google Sheets Writer and Reader API",
    "version": "1.0.0",
    "description": "An API to write and read data from Google Sheets."
  },
  "servers": [
    {
      "url": "http://truthfulweirdsolidstatedrive.joshvaarkman.repl.co/"
    }
  ],
  "paths": {
    "/writeToSheet": {
      "post": {
        "summary": "Write data to a Google Sheet",
        "description": "Accepts an array of data to be written to the Google Sheet.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "data"
                ],
                "properties": {
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "The data to be written to the sheet."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful write operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "spreadsheetId": {
                      "type": "string"
                    },
                    "tableRange": {
                      "type": "string"
                    },
                    "updates": {
                      "type": "object",
                      "properties": {
                        "spreadsheetId": {
                          "type": "string"
                        },
                        "updatedRange": {
                          "type": "string"
                        },
                        "updatedRows": {
                          "type": "integer"
                        },
                        "updatedColumns": {
                          "type": "integer"
                        },
                        "updatedCells": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/readFromSheet": {
      "get": {
        "summary": "Read data from a Google Sheet",
        "description": "Returns an array of data from the Google Sheet.",
        "parameters": [
          {
            "name": "range",
            "in": "query",
            "description": "The range in the sheet to read data from. Example: 'A1:B10'.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful read operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Range not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
